<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MicroActivities.SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/backbutton"
            app:tint="@color/black"
            android:layout_marginStart="10dp"
            android:paddingTop="5dp"
            android:layout_alignParentStart="true"
            android:id="@+id/policies_backbutton"
            android:padding="4dp"
            android:background="@drawable/white_nowhere"
            />


        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Application Policies"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#848484"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_nowhere"
        android:layout_marginStart="15dp"
        android:padding="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:id="@+id/policy_privacy"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/privacy"
            android:padding="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privay Policies"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/gothammedium1"
            android:textColor="@color/black"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:textSize="14dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_nowhere"
        android:layout_marginStart="15dp"
        android:padding="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:id="@+id/terms_of_use"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/policy"
            android:padding="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms of Use "
            android:layout_marginStart="10dp"
            android:fontFamily="@font/gothammedium1"
            android:textColor="@color/black"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:textSize="14dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_nowhere"
        android:layout_marginStart="15dp"
        android:padding="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:id="@+id/disclaimer"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/rzp_secured_by_bg"
            android:padding="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disclaimer "
            android:layout_marginStart="10dp"
            android:fontFamily="@font/gothammedium1"
            android:textColor="@color/black"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:textSize="14dp"
            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#848484"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#22111111"
            android:text="Food Owl"
            android:fontFamily="@font/ralewayxtrabold"
            android:textSize="40dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cure for late night hunger"
            android:textColor="#22000000"
            android:fontFamily="@font/galada"
            android:layout_marginStart="20dp"
            android:textSize="16dp"
            />
    </LinearLayout>


</LinearLayout>