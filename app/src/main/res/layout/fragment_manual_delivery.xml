<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="11dp"
            android:text="Fill this form for adding delivery address manually. After filling this form click on ADD ADDRESS button."
            android:textColor="#848484"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittextshape"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textSize="13dp"
            android:hint="Pincode"
            android:paddingStart="20dp"
            android:id="@+id/add_manually_pincode"
            android:inputType="textPersonName"
            android:paddingEnd="50dp"
            android:layout_marginTop="10dp"
            android:textColorHint="#848484"
            android:textColor="#000"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittextshape"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textSize="13dp"
            android:hint="House Number"
            android:paddingStart="20dp"
            android:id="@+id/add_manually_housenumber"
            android:inputType="textPersonName"
            android:paddingEnd="50dp"
            android:layout_marginTop="5dp"
            android:textColorHint="#848484"
            android:textColor="#000"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittextshape"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textSize="13dp"
            android:hint="Area"
            android:paddingStart="20dp"
            android:id="@+id/add_manually_area"
            android:inputType="textPersonName"
            android:paddingEnd="50dp"
            android:layout_marginTop="5dp"
            android:textColorHint="#848484"
            android:textColor="#000"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittextshape"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textSize="13dp"
            android:hint="Landmark"
            android:paddingStart="20dp"
            android:id="@+id/add_manually_landmark"
            android:inputType="textPersonName"
            android:paddingEnd="50dp"
            android:layout_marginTop="5dp"
            android:textColorHint="#848484"
            android:textColor="#000"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittextshape"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textSize="13dp"
            android:hint="City"
            android:paddingStart="20dp"
            android:id="@+id/add_manually_city"
            android:inputType="textPersonName"
            android:paddingEnd="50dp"
            android:layout_marginTop="5dp"
            android:textColorHint="#848484"
            android:textColor="#000"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittextshape"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textSize="13dp"
            android:hint="State"
            android:paddingStart="20dp"
            android:id="@+id/add_manually_state"
            android:inputType="textPersonName"
            android:paddingEnd="50dp"
            android:layout_marginTop="5dp"
            android:textColorHint="#848484"
            android:textColor="#000"
            />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>