<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutAnimation="@anim/layout_animation_fast"
    tools:context=".MicroActivities.DeveloperProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:id="@+id/info_container"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:cardCornerRadius="100dp"
            android:id="@+id/userimagecardview"
            >
            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="#fff"
                android:layout_gravity="start"
                android:scaleType="centerCrop"
                android:id="@+id/account_userimage"
                android:src="@drawable/profileimage"
                android:scaleY="1.1"
                android:scaleX="1.1"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aditya Asthana"
            android:textSize="24dp"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:id="@+id/account_name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asthana.aditya1@gmail.com"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:id="@+id/account_mail"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect with me: "
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/lato"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="15dp"
                android:background="@drawable/white_nowhere"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/developer_linkedin"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:src="@drawable/linkedin"
                    android:scaleType="centerCrop"
                    android:padding="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LinkedIn"
                    android:textSize="12dp"
                    android:fontFamily="@font/robotoregular"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="15dp"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/developer_instagram"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/instagram"
                    android:scaleType="centerCrop"
                    android:padding="1dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instagram"
                    android:textSize="12dp"
                    android:fontFamily="@font/robotoregular"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="30dp"
                android:id="@+id/developer_facebook"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/facebook"
                    android:scaleType="centerCrop"
                    android:padding="2dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facebook"
                    android:textSize="12dp"
                    android:fontFamily="@font/robotoregular"
                    android:textColor="@color/black"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#848484"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About me:"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/lato"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aditya_asthana"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/robotoregular"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#22111111"
            android:text="Food Owl"
            android:fontFamily="@font/ralewayxtrabold"
            android:textSize="40dp"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cure for late night hunger"
            android:textColor="#22000000"
            android:fontFamily="@font/galada"
            android:layout_marginStart="10dp"
            android:textSize="16dp"
            />
    </LinearLayout>





</RelativeLayout>
