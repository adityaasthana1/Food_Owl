<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:background="#fff"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:background="#fff"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Owl"
            android:textColor="#000"
            android:textSize="40dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/ralewayxtrabold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Hyperlocal late night food deliveries."
            android:textSize="18dp"
            android:textColor="#222"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/ds"
            android:layout_marginTop="0dp"

            />



        <LinearLayout
            android:layout_width="wrap_content"
            android:background="@drawable/darkoutline"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:id="@+id/google_signin_button"
            android:elevation="4dp"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/googleicon"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in with Google"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_margin="10dp"
                />

        </LinearLayout>

        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:borderColor="#949494"
            app:cornerRadius="8dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/emailsignin"
                android:layout_gravity="center_vertical"
                android:textSize="14dp"
                android:hint="E-mail or username "
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:inputType="textEmailAddress"
                android:textColorHint="#848484"
                android:textColor="#000"/>

        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>


        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="8dp"
            app:borderColor="#949494"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:animationDuration="700"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="14dp"
                android:id="@+id/passwordsignin"
                android:background="@drawable/edittextshape"
                android:hint="Password"
                android:paddingStart="10dp"
                android:inputType="textPassword"
                android:textColorHint="#848484"
                android:paddingEnd="10dp"
                android:textColor="#000"/>
        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>


        <android.widget.Button
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:background="@drawable/button0"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:elevation="5dp"
            android:text="Sign in"
            android:id="@+id/signinbutton"
            android:textColor="#ecf0f1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:id="@+id/forgotpasswordlayout"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#848484"
                android:text="forgot your login details?"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Get help logging in"
                android:id="@+id/forgotpassword"
                android:textColor="@color/red"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:id="@+id/signuptextlayout"
            android:layout_gravity="bottom"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dont have an account?"
                android:textColor="#848484"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signupbutton"
                android:text=" Sign up."
                android:textColor="@color/red"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Made with â¤ in"
                android:textColor="#848484"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" India"
                android:textColor="#c0392b"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms of Use"
                android:textColor="@color/red"
                android:id="@+id/termsofuse"
                android:layout_marginEnd="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Privacy Policy"
                android:layout_marginStart="20dp"
                android:id="@+id/privacypolicy"
                android:textColor="@color/red"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#22111111"
                android:text="Food Owl"
                android:fontFamily="@font/ralewayxtrabold"
                android:textSize="40dp"
                android:layout_marginStart="40dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cure for late night hunger"
                android:textColor="#22000000"
                android:fontFamily="@font/galada"
                android:layout_marginStart="40dp"
                android:textSize="16dp"
                />
        </LinearLayout>


    </LinearLayout>

</ScrollView>