<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CartActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Summary"
        android:textColor="#000"
        android:fontFamily="@font/ralewayxtrabold"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="16dp"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:id="@+id/proceedorderLayout"
        android:background="@color/red"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INR (Rs) 0"
            android:fontFamily="@font/robotblack"
            android:textColor="#fff"
            android:id="@+id/ordertotaltext"
            android:textSize="14dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/proceedordertext"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:id="@+id/proceedordertext"
            android:layout_alignParentEnd="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/proceed_order"
                android:fontFamily="@font/ralewayxtrabold"
                android:textColor="#fff"
                android:textSize="14dp"
                android:layout_marginEnd="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(view cart)"
                android:fontFamily="@font/ralewayxtrabold"
                android:textColor="#fff"
                android:textSize="12dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                />
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>