<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/MyBookingLayout"
            android:gravity="center_vertical"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true"
                android:gravity="start"
                android:layout_toLeftOf="@id/userimagecardview"
                android:layout_centerVertical="true"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="24dp"
                    android:fontFamily="@font/ralewayxtrabold"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/account_name"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:id="@+id/account_mail"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:id="@+id/account_phone"
                    />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                app:cardCornerRadius="100dp"
                android:id="@+id/userimagecardview"
                >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#fff"
                    android:layout_gravity="start"
                    android:scaleType="centerCrop"
                    android:id="@+id/account_userimage"
                    />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="15dp"
                android:background="@drawable/white_nowhere"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/account_settings_layout"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/setting_icon"
                    android:scaleType="centerCrop"
                    android:padding="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textSize="12dp"
                    android:fontFamily="@font/robotoregular"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="15dp"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/account_favorite_layout"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/love"
                    android:scaleType="centerCrop"
                    android:padding="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorites"
                    android:textSize="12dp"
                    android:fontFamily="@font/robotoregular"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="30dp"
                android:id="@+id/account_addressbook_layout"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/book"
                    android:scaleType="centerCrop"
                    android:padding="2dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address Book"
                    android:textSize="12dp"
                    android:fontFamily="@font/robotoregular"
                    android:textColor="@color/black"
                    android:gravity="center"
                    />


            </LinearLayout>



        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#848484"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_nowhere"
            android:padding="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/account_write_feedback"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star1"
                android:padding="2dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Write Feedback"
                android:fontFamily="@font/gothammedium1"
                android:textColor="@color/black"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:textSize="14dp"
                android:layout_marginStart="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_nowhere"
            android:padding="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:id="@+id/account_mycart"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/cart2"
                android:padding="2dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Cart"
                android:fontFamily="@font/gothammedium1"
                android:textColor="@color/black"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="10dp"
                android:textSize="14dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_nowhere"
            android:padding="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:id="@+id/account_getsupport"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/phone"
                android:padding="2dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Support"
                android:fontFamily="@font/gothammedium1"
                android:textColor="@color/black"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:textSize="14dp"
                android:layout_marginStart="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_nowhere"
            android:id="@+id/account_policieslayout"
            android:padding="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/policy"
                android:padding="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Policies"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/gothammedium1"
                android:textColor="@color/black"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:textSize="14dp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#848484"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_nowhere"
            android:layout_marginStart="15dp"
            android:padding="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:id="@+id/account_aboutlayout"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/information"
                android:padding="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/gothammedium1"
                android:textColor="@color/black"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:textSize="14dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_nowhere"
            android:layout_marginStart="15dp"
            android:padding="5dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/account_developer_contact"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/devicon"
                android:padding="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developer Contact"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/gothammedium1"
                android:textColor="#3498db"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:textSize="14dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_nowhere"
            android:layout_marginStart="15dp"
            android:padding="5dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:id="@+id/account_logout"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/account_vector"
                android:padding="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/gothammedium1"
                android:textColor="@color/red"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:textSize="14dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="230dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#22111111"
                android:text="Food Owl"
                android:fontFamily="@font/ralewayxtrabold"
                android:textSize="40dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cure for late night hunger"
                android:textColor="#22000000"
                android:fontFamily="@font/galada"
                android:layout_marginStart="10dp"
                android:textSize="16dp"
                />
        </LinearLayout>



    </LinearLayout>

</ScrollView>