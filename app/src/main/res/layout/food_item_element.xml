<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="3dp"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    android:paddingEnd="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/MyBookingLayout"
        android:elevation="4dp"
        android:gravity="center_vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            android:elevation="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:src="@drawable/shahisamosa"
                android:scaleType="centerCrop"
                android:id="@+id/food_element_image"
                />

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shahi Samosa"
                android:textSize="14dp"
                android:fontFamily="@font/lato"
                android:textColor="#000"
                android:textStyle="normal"
                android:layout_marginTop="5dp"
                android:id="@+id/element_food_name"
                android:layout_marginStart="2dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cheese bursted baked samosa with special potato filling served with veggies, exotic sauces with a sprinkle of our special masalas."
                android:layout_marginStart="2dp"
                android:layout_marginEnd="10dp"
                android:textSize="11dp"
                android:id="@+id/food_element_description"
                android:textColor="#848484"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bestseller"
                    android:textColor="@color/white"
                    android:padding="4dp"
                    android:textSize="10dp"
                    android:layout_gravity="start"
                    android:background="@drawable/highlight_badge"
                    android:id="@+id/food_element_tag"
                    />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price : 120/-"
                    android:textSize="13dp"
                    android:fontFamily="@font/robotoregular"
                    android:textColor="@color/black"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="2dp"
                    android:id="@+id/food_element_price"
                    android:layout_centerVertical="true"
                    />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/food_element_button"
                    android:background="@drawable/button0"
                    android:text="+ Add to cart"
                    android:textSize="10dp"
                    app:cornerRadius="20dp"
                    android:layout_alignParentEnd="true"
                    android:elevation="4dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>