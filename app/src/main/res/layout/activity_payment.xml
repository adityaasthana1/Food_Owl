<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"
    tools:context=".PaymentActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_fileName="payment_processing.json"
        android:id="@+id/payment_animation"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Don't close the App"
        android:fontFamily="@font/robotblack"
        android:id="@+id/title_text"
        android:textSize="24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:textColor="#848484"
        android:text="Sit back and relax. We are processing your payment."
        android:layout_marginStart="20dp"
        android:gravity="center_horizontal"
        android:id="@+id/description_text"
        android:layout_marginEnd="20dp"
        android:textSize="13dp"
        />

</LinearLayout>