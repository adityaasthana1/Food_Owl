<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    android:layout_height="match_parent">



    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/lottianimation"
        app:lottie_fileName="scooter.json"
        app:lottie_autoPlay="true"
        android:scaleX="1.3"
        android:scaleY="1.3"
        app:lottie_loop="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Fetching some Food."
        android:fontFamily="@font/robotblack"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:textSize="24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textColor="#848484"
        android:layout_gravity="start"
        android:layout_marginStart="50dp"
        android:text="Late night cravings? Hold up! setting you up with some late night food!."
        android:layout_marginEnd="50dp"
        android:gravity="center_horizontal"
        />

</LinearLayout>