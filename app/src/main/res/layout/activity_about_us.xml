<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MicroActivities.AboutUsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp"
        android:layoutAnimation="@anim/layout_animation_fast"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:id="@+id/ordersummarytext"
            android:layout_gravity="start"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/backbutton"
                android:paddingTop="5dp"
                android:background="@drawable/white_nowhere"
                android:id="@+id/aboutus_backbutton"
                app:tint="@color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textColor="#000"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/ralewayxtrabold"
                android:textSize="16dp"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:elevation="3dp"
            app:cardCornerRadius="10dp"

            android:background="#ecf0f1"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/foodowlpromo"
                android:background="@color/darker_red"
                android:scaleType="fitCenter"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Our Mission -"
            android:textColor="#000"
            android:fontFamily="@font/ralewayxtrabold"
            android:layout_marginTop="5dp"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To never let the late night hunger and food craving let you down. We have got your back."
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="13dp"
            android:fontFamily="@font/robotoregular"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:lottie_fileName="about.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_repeatCount="0"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- About -"
            android:textColor="#000"
            android:fontFamily="@font/ralewayxtrabold"
            android:layout_marginTop="10dp"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:text="@string/foodowl_about"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="13dp"
            android:fontFamily="@font/robotoregular"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            app:lottie_fileName="journey.json"
            android:scaleType="centerCrop"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Our Journey -"
            android:textColor="#000"
            android:fontFamily="@font/ralewayxtrabold"
            android:layout_marginTop="5dp"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/journey"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="13dp"
            android:fontFamily="@font/robotoregular"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Designed by"
                android:textSize="11dp"
                android:textColor="#000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Aditya Asthana"
                android:textSize="11dp"
                android:textColor="#e74c3c"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#22111111"
                android:text="Food Owl"
                android:fontFamily="@font/ralewayxtrabold"
                android:textSize="40dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cure for late night hunger"
                android:textColor="#22000000"
                android:fontFamily="@font/galada"
                android:layout_marginStart="10dp"
                android:textSize="16dp"
                />
        </LinearLayout>
    </LinearLayout>


</ScrollView>